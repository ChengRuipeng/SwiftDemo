source 'git@github.com/CocoaPods/Specs.git'

use_frameworks!
target 'SwiftDemo' do
    # Weex 相关
 	pod 'WeexSDK', '0.12.0’
 	pod 'WXDevtool', '0.8.2'
    pod 'SDWebImage', '3.7.5'
    pod 'SocketRocket', '0.4.2'

    # 基于Alamofire的网络抽象层
    pod 'Moya'
    pod 'Moya/RxSwift'
    pod 'Alamofire'

    # JSON 解析
    pod 'SwiftyJSON'
    pod 'ObjectMapper'

    # Rx 编程
#    pod 'RxSwift'
    pod 'RxCocoa'

    # 页面布局
    pod 'SnapKit'

    # 下载图片
    pod 'Kingfisher'

    # Swift版本的 Promise
    pod 'PromiseKit'

    # 空状态模式
    pod 'DZNEmptyDataSet'

    # 模仿 Twitter 的图片查看器
    pod 'ImageViewer’

    # a clean and easy-to-use HUD meant to display the progress of an ongoing task
    pod 'SVProgressHUD'
    
    target 'SwiftDemoUITests' do
        inherit! :search_paths
        # Pods for testing
    end
    
end
